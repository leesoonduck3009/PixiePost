<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_height="wrap_content">
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/listRecommendFriendImage"
            android:src="@drawable/avatar3"
            android:scaleType="centerCrop"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
            android:background="@drawable/background_avatar"
            />
        <TextView
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:id="@+id/listRecommendFriendName"
            android:text="Username"
            android:textColor="#C0C0C0"
            android:textSize="18sp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/listRecommendFriendImage"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/btnAddNewFriend"
            android:layout_marginTop="25dp"
            android:background="@drawable/custom_button"
            android:paddingVertical="10dp"
            android:paddingHorizontal="20dp"
            android:gravity="center"
            android:layout_toEndOf="@+id/listRecommendFriendName"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_add"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginLeft="2dp"
                android:text="ThÃªm"/>
        </LinearLayout>


    </RelativeLayout>
</androidx.cardview.widget.CardView>