<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:overScrollMode="never"
    tools:context=".View.Activity.OTPVerificationSignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <ImageView
            android:layout_width="280dp"
            android:layout_height="250dp"
            android:src="@drawable/image_email_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="Xác nhận OTP"
            android:textStyle="bold"
            android:textColor="#A9A9A9"/>
        <TextView
            android:layout_width="300dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginTop="20dp"
            android:text="Vui lòng nhập mã số chúng tôi đã gửi cho bạn qua email để hoàn thành thủ tục đăng ký."
            android:textColor="#A9A9A9"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/inputCode1"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:background="@drawable/edittext_bg"
                android:textColor="#ffffff"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:ignore="LabelFor" />
            <EditText
                android:id="@+id/inputCode2"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:background="@drawable/edittext_bg"
                android:layout_marginStart="8dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="#ffffff"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:ignore="LabelFor" />
            <EditText
                android:id="@+id/inputCode3"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:background="@drawable/edittext_bg"
                android:layout_marginStart="8dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="#ffffff"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:ignore="LabelFor" />
            <EditText
                android:id="@+id/inputCode4"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:background="@drawable/edittext_bg"
                android:layout_marginStart="8dp"
                android:gravity="center"
                android:imeOptions="actionDone"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="#ffffff"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:ignore="LabelFor" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#A9A9A9"
                android:textSize="14sp"
                android:text="Chưa nhận được mã?"/>
            <TextView
                android:id="@+id/textResendOTP"
                android:gravity=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textStyle="bold"
                android:textColor="#F00000"
                android:textSize="15sp"
                android:text="Gửi lại"/>
        </LinearLayout>

        <android.widget.Button
            android:id="@+id/btnVerify"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Xác thực"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:layout_marginTop="40dp"
            android:paddingHorizontal="40dp"
            android:textAllCaps="false"
            android:background="@drawable/custom_button"/>
    </LinearLayout>
</ScrollView>