<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Activity.UpdateUserInformationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginTop="10dp"
            android:background="@color/black">

            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_back"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="Tài khoản cá nhân"
                android:gravity="center"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/avatarImg"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:background="@drawable/background_avatar_profile" />
            <ImageView
                android:id="@+id/btnUpdateAvatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:paddingHorizontal="6dp"
                android:layout_marginBottom="10dp"
                android:layout_alignBottom="@+id/avatarImg"
                android:background="@drawable/background_icon_messenger"
                android:layout_alignEnd="@+id/avatarImg"
                android:src="@drawable/baseline_photo_camera_24" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingStart="20dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/icon_group" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:textColor="#C0C0C0"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="Họ " />
        </LinearLayout>
        <EditText
            android:id="@+id/edtLastName"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:text="Le"
            android:textSize="18dp"
            android:textColor="#C0C0C0"
            android:paddingVertical="14dp"
            android:background="@drawable/edittext_bg"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingStart="20dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/icon_person" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:textColor="#C0C0C0"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="Tên" />
        </LinearLayout>
        <EditText
            android:id="@+id/edtFirstName"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:text="Quoc Dung"
            android:textSize="18dp"
            android:textColor="#C0C0C0"
            android:paddingVertical="14dp"
            android:background="@drawable/edittext_bg"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingStart="20dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/icon_email" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:textColor="#C0C0C0"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="Email" />
        </LinearLayout>
        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:text="ledungquoc2983@gmail.com"
            android:textSize="18dp"
            android:textColor="#C0C0C0"
            android:paddingVertical="14dp"
            android:background="@drawable/edittext_bg"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingStart="20dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/icon_phone" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:textColor="#C0C0C0"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="Số điện thoại" />
        </LinearLayout>
        <EditText
            android:id="@+id/edtPhoneNumber"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:text="0914700123"
            android:textSize="18dp"
            android:textColor="#C0C0C0"
            android:paddingVertical="14dp"
            android:background="@drawable/edittext_bg"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lưu"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:background="@drawable/custom_button"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="100dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>