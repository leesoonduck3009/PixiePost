<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:animateLayoutChanges="true"
    tools:context=".View.Activity.ConversationListActivity"
    android:orientation="vertical"
    android:id="@+id/conversation_activity"
    >

    <LinearLayout
        android:gravity="left"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:orientation="horizontal"
        android:background="#F5BD40">
        <ImageView
            android:id="@+id/bttBackConversation"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_back"/>
        <TextView
            android:gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Chat"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/imageProfile">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listConversationRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:overScrollMode="never"
            android:padding="13dp"
            android:visibility="gone"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:visibility="gone"/>
        <LinearLayout
            android:id="@+id/layoutNotConversation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">
            <ImageView
                android:layout_marginTop="-100dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/ic_not_conversation"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/textViewNotConversation"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Hãy tìm kiếm và nhắn tin cho những người bạn thân thiết của bạn naò"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textAlignment="center"
                android:visibility="visible"
                />
        </LinearLayout>

    </FrameLayout>
</LinearLayout>